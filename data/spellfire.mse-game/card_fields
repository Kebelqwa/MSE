############################# Fields
card field:
	type: text
	name: cardnumber
	card list visible: true
	card list column: 1
	card list width: 10
	card list name: Num
	identifying: true
	show statistics: false
	description: Card set number
	#default: number_of_items(in: set)
	script: card_number_full(value)
	
	
	
